<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="800"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360" >

    <shape
        android:innerRadiusRatio="3"
        android:shape="ring"
        android:thickness="8dp"
        android:useLevel="false" >

        <size
            android:width="48dp"
            android:height="48dp" />

        <gradient
            android:type="sweep"
            android:startColor="#FF18FFFF"
            android:endColor="#FF18FFFF"
            android:angle="0"
            android:centerX="50%"
            android:centerY="50%" />

    </shape>

</rotate>
